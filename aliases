# General

## Existing commands

alias ls="ls --color=auto"
alias grep="grep --color -E"
alias rm="rm -I"
alias xclip="xclip -selection clipboard"
alias wget="wget -q --show-progress"

## Shell QoL

alias ..="source $HOME/.zshrc"
alias path='echo $PATH'
alias s='sudo'
alias p='proxychains'
alias wcd="cd $USERPROFILE"
alias clcl="echo -n | xclip && echo -n | \xclip"

## Power management

alias ssp="sudo systemctl poweroff"
alias ssr="sudo systemctl reboot"
alias sss="sudo systemctl suspend"

## SSH

alias stun="ssh -vTND 2222"
alias kc="keychain --clear"
alias ka="keychain ~/.ssh/rsa/*"

# Git

## Track files

alias gadd="git add"
alias grm="git rm"
alias gmv="git mv"

## Review changes

alias gs="git status"
alias gd="git diff"
alias gl="git log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias gL='gl origin/$(git symbolic-ref --short HEAD)..$(git symbolic-ref --short HEAD)'

## Commit and pull/push

alias gc="git commit"
alias ga="git commit --amend"
alias gf="git fetch"
alias gm="git merge"
alias gp="git push"
alias gP="git pull"

## Branches

alias gC="git checkout"
alias gb="git branch -vv"

## Other

alias gS="git stash"
alias gt="git tag"
alias gr="git rebase"
alias gR="git reset"
alias gi="echo $1 >> .gitignore"
alias gB="git blame"
alias cdg='cd $(git rev-parse --show-toplevel)'

# Dev stuff

alias getrvm="\curl -sSL https://get.rvm.io | bash -s stable"
alias getnvm="\curl -o- https://raw.githubusercontent.com/creationix/nvm/master/install.sh | bash"
alias getpyenv="\curl -L https://raw.githubusercontent.com/pyenv/pyenv-installer/master/bin/pyenv-installer | bash"
alias getstarship="\curl -fsSL https://starship.rs/install.sh | bash"
