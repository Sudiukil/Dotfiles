# General

## Existing commands

alias ls="ls --color=auto"
alias grep="grep --color -E"
alias rm="rm -I"
alias wget="wget -q --show-progress"

## Shell QoL

alias renv="source ~/.zshenv"
alias path='echo $PATH'
alias s='sudo'
alias p='proxychains'
alias cs="cheatsheet" # See functions
alias tdl="transmission-cli"

## SSH

alias stun="ssh -vTND 2222"
alias kc="keychain --clear"
alias ka="keychain ~/.ssh/rsa/*"

# Git

## Track files

alias gadd="git add"
alias grm="git rm"
alias gmv="git mv"

## Review changes

alias gs="git status"
alias gd="git diff"
alias gl="git log"
alias gL='git log origin/$(git head)..$(git head)' # See gitconfig.global

## Commit and pull/push

alias gc="git commit"
alias ga="git commit --amend"
alias gf="git fetch"
alias gm="git merge"
alias gp="git push"
alias gP="git pull"

## Branches

alias gC="git checkout"
alias gb="git branch -vva"

## Other

alias gS="git stash"
alias gt="git tag"
alias gr="git rebase"
alias gR="git reset"
alias gi="! [ -z $1 ] && echo $1 >> .gitignore"
alias cdg='cd $(git root)' # See gitconfig.global

# Docker

## Containers

alias dc="docker container"
alias dps="docker ps"

## Images

alias di="docker image"
alias dls="docker image ls"

## System

alias ds="docker system"
alias dsp="docker system prune --volumes -a"

## Compose

alias dC="docker-compose"
alias dCu="docker-compose up -d"
alias dCd="docker-compose down"

# Screen

alias sl="screen -ls"
alias ss="screen -S"
alias sd="screen -dmS"
alias sr="screen -r"
alias sw="screen -wipe"

# Dev stuff

alias getrvm="\curl -sSL https://get.rvm.io | bash -s stable"
alias getnvm="\curl -o- https://raw.githubusercontent.com/creationix/nvm/master/install.sh | bash"
alias getpyenv="\curl -L https://raw.githubusercontent.com/pyenv/pyenv-installer/master/bin/pyenv-installer | bash"
alias getstarship="\curl -fsSL https://starship.rs/install.sh | sh"
alias gradle="sh ./gradlew"
