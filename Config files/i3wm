# General

## General behavior

focus_follows_mouse no
workspace_auto_back_and_forth yes

## Windows look

new_window pixel
new_float pixel

## Font & colors

font pango:DroidSansMono 9

set $b_color1 #1f1f1f
set $b_color2 #3f3f3f
set $t_color1 #00ba5e
set $t_color2 #7e7e7e
set $u_color1 #bd1f1f
set $u_color2 #bdbdbd

# class 					border 			background 		text 			indicator
client.focused 				$b_color2		$b_color2		$t_color1		$t_color1
client.focused_inactive 	$b_color1		$b_color1		$t_color2		$t_color1
client.unfocused 			$b_color1		$b_color1		$t_color2		$t_color1
client.urgent 				$u_color1		$u_color1		$u_color2		$t_color1

## Status bar

bindsym $mod+Shift+b bar mode toggle

bar {
	id main-bar
	status_command c3status
	font pango:DroidSansMono,Icons 9
	colors {
		background $b_color1
		statusline $t_color1
		separator $b_color1

		# class 			border 			background 		text
		focused_workspace 	$b_color1		$b_color1		$t_color1
		active_workspace 	$b_color1		$b_color1		$t_color2
		inactive_workspace 	$b_color1		$b_color1		$t_color2
		urgent_workspace 	$u_color1		$u_color1		$u_color2
	}
	position top
}

