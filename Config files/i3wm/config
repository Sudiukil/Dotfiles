### General ###

## General behavior

focus_follows_mouse no

## Status bar

bar {
	#status_command i3status -c ~/.i3/i3status.conf
	status_command ~/.i3/c3status/launch-c3status.sh
	output DVI-D-0
	font pango:Ohsnap 10
	colors {
		background	#0a0a0a
		statusline	#ff6500
		separator	#767676

		# class			border		background	text
		focused_workspace	#0a0a0a		#0a0a0a		#ff6500
		active_workspace	#0a0a0a		#0a0a0a		#ff6500
		inactive_workspace	#0a0a0a		#0a0a0a		#767676
		urgent_workspace	#aa0000		#aa0000		#ffffff
	}
}

## Font & colors

font pango:Ohsnap 10

# class			border		background	text		indicator
client.focused		#141414		#141414		#ff6500		#ff6500
client.focused_inactive	#0a0a0a		#0a0a0a		#767676		#ff6500
client.unfocused	#0a0a0a		#0a0a0a		#767676		#ff6500
client.urgent		#aa0000		#aa0000		#ffffff		#ff6500

