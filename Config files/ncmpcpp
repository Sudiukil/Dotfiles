## Format & colors

song_list_format = "{%a - }{%t}|{%f}$R{(%l)}"
song_status_format = "{{%a{ \"%b\"{ (%y)}} - }{%t}}|{%f}"
song_library_format = "{%n - }{%t}|{%f}"
tag_editor_album_format = "{(%y) }%b"

alternative_header_first_line_format = "$b$1$aqqu$/a$9 {%t}|{%f} $1$atqq$/a$9$/b"
alternative_header_second_line_format = "{{$8%a - $9}{$8%b$9 }{$8$b(%y)$/b$9}}|{%D}"

now_playing_prefix = "$u$r$b"
now_playing_suffix = "$/u$/r$/b"
browser_playlist_prefix = "$2(playlist)$9 "
selected_item_prefix = "$b$4"
selected_item_suffix = "$9$/b"

song_window_title_format = "{%n. %t}|{%f} - {%a} {(%b)}"

song_columns_list_format = "(7)[]{l} (25)[cyan]{a} (40)[green]{t|f} (30)[yellow]{b}"

