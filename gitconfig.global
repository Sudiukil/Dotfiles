[core]
  whitespace = -trailing-space
[format]
  pretty = format:%Cred%h %Cblue%as %Cgreen%<(21,trunc)%an %Creset%s %Cred%d
[fetch]
  prune = true
[alias]
  aliases = "config --get-regexp alias"
  slog = "log -n 10"
  root = "rev-parse --show-toplevel"
  head = "symbolic-ref --short HEAD"
  rollback = "revert HEAD -n" # Reverts last commit
  undo = "reset --soft HEAD~1" # Undoes last commit
  rewind = "reset --hard HEAD~1" # Hard reset to last commit
  unstage = "reset HEAD" # Unstages all changes
  wipe = "reset --hard HEAD" # Removes all current changes
  resync = "reset --hard FETCH_HEAD" # Resets to remote state
  snip = "!git branch -v | grep --fixed-strings '[gone]' | tr -s ' ' | cut -d ' ' -f 2 | xargs -r git branch -D" # Removes "gone" branches
  makepatch = "format-patch -1"
  patch = "apply --reject"
  unpatch = "apply -R"
